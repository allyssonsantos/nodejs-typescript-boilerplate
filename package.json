{
  "name": "nodejs-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A simple boilerplate for apis made with nodejs and typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest --no-cache",
    "dev": "nodemon --watch \"app/\" --exec \"ts-node app/entry.ts \" -e ts",
    "build": "tsc",
    "prod": "npm run build && node dist/entry.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allyssonsantos/nodejs-typescript-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "api",
    "typescript"
  ],
  "author": "Allysson Santos <aallysson0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allyssonsantos/nodejs-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/allyssonsantos/nodejs-typescript-boilerplate#readme",
  "dependencies": {
    "@types/express": "^4.16.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
